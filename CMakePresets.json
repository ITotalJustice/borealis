    "buildPresets": [
        {
            "name": "pc",
            "configurePreset": "pc"
        },
        {
            "name": "pc-dev",
            "configurePreset": "pc-dev"
        },
        {
            "name": "vcpkg",
            "configurePreset": "vcpkg"
        },
        {
            "name": "vcpkg-dev",
